<h1>Register</h1>

<% if @user.errors.any? %>
  <ul>
    <% @user.errors.full_messages.each do |msg| %>
      <li> <%= msg %> </li>
    <% end %>
  </ul>
<% end %>

<%= form_for @user do |f| %>
  <%= f.text_field :email %>
  <%= f.text_field :first_name %>
  <%= f.text_field :last_name %>
  <%= f.password_field :password %>
  <%= f.password_field :password_confirmation %>
  <%= f.submit "Register" %>
<% end %>
