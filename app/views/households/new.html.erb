<h1>New Dwelling</h1>

<%= form_tag(households_path) do %>
  <%= text_field_tag :name, '', placeholder: "Dwelling name" %>
  <%= text_field_tag :address, '', placeholder: "Dwelling address" %>
  <div class='wrap-center'><%= submit_tag "Create Dwelling" %></div>
<% end %>

<% if @household.errors.any? %>
  <% @household.errors.full_messages.each do |msg| %>
    <div class='wrap-center'><p class='error'> <%= msg %> </p></div>
  <% end %>
<% end %>
