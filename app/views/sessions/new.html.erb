

<%= image_tag("home.png", id: "home") %>
<h2 class='sig-color'>Dwell well.</h2>

<% if flash[:error] %>
  <h2><%= flash[:error] %></h2>
<% end %>


<%= form_tag login_path do %>
  <%= text_field_tag :user_email, '', placeholder: "Email" %>
  <%= password_field_tag :user_password, '', placeholder: "Password" %>
  <div class='wrap-center'>
    <%= submit_tag "Login" %>
    <%= link_to "Register", new_user_path %>
  </div>
<% end %>

<% if flash[:error] %>
  <div class='wrap-center'><p class='error'><%= flash[:error] %></p></div>
<% end %>
